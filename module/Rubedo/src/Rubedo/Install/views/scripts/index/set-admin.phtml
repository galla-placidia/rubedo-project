<div id="alerts">
    <?php if ($this->hasError) { ?>
        <div class="alert alert-error"><?php echo $this->form->getErrorMessages(); ?></div>
    <?php } ?>
    <?php if ($this->hasAdmin) { ?>
        <div class="alert alert-success">
            Admin accounts exist :
            <ul>
                <?php foreach ($this->adminAccounts as $admin) { ?>
                    <li><?php echo $admin['login'] . ' - ' . $admin['email']; ?></li>
                <?php } ?>
            </ul>
        </div>
