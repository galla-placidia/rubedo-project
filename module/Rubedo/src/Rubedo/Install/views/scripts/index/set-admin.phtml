        <div class="alert alert-error">No Admin Account Set</div>
    <?php } ?>
    <?php if ($this->creationDone) { ?>
        <div class="alert alert-success">Account created : <?php echo $this->accountName; ?></div>
    <?php } else { ?>
        <?php
        echo $this->partial('rubedo/install/controller/index/form', array(
            'form' => $this->form
        ));
    }
    ?>
